@model IEnumerable<SE310_BKTTH.Models.ProductModel>
@{
Layout = "_LayoutAdmin";
ViewData["Title"] = "Admin Product Management";
}
<p>
    <a asp-action="Create" asp-controller="Product" class="btn btn-primary">Create New Product</a>
</p>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Image</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
    {
    <tr>
        <td>@product.Name</td>
        <td>@product.Description</td>
        <td>@product.Price</td>
        <td><img src="~/img/@product.ImageUrl" alt="Product Image" style="width:50px; height:50px;" /></td>
        <td>
            <a asp-action="Edit" asp-controller="Product" asp-route-id="@product.Id" class="btn btn-warning">Edit</a>
            <form asp-action="DeleteConfirmed" asp-controller="Product" asp-route-id="@product.Id" method="post" >
                <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure you want to delete this product?');">Delete</button>
            </form>

        </td>
    </tr>
    }
    </tbody>
</table>
