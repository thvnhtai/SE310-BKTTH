@{
ViewBag.Title = "Sign In";
Layout = "_LayoutAuth";
}

@section customHead {
<link rel="stylesheet" href="~/css/authentication.css" asp-append-version="true" />
}

<section class="h-100 gradient-form py-5">
    <div class="container py-2 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10 col-lg-10">
                <div class="card fade-in shadow-lg rounded-5 text-black">
                    <div class="row g-0">
                        <div class="col-lg-12">
                            <div class="card-body p-md-5 mx-md-4">

                                <div class="text-center mb-4">
                                    <h3 class="mt-3">Đăng nhập</h3>
                                </div>

                                <form asp-action="LoginUser" asp-controller="Authentication" method="post">
                                    <p class="text-muted mb-4">Vui lòng đăng nhập tài khoản của bạn</p>

                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="username">Tên người dùng</label>
                                        <input type="text" id="username" name="username" class="form-control form-control-lg" placeholder="Tên người dùng" required/>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="password">Mật khẩu</label>
                                        <input type="password" id="password" name="password" class="form-control form-control-lg" placeholder="Mật khẩu" required/>
                                    </div>

                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <button class="btn btn-block fa-lg mb-3 custom-btn btn-lg btn-primary" type="submit">
                                            Đăng nhập
                                        </button>
                                    </div>
                                </form>

                                <div class="d-flex align-items-center justify-content-center pb-4">
                                    <p class="mb-0 me-2">Chưa có tài khoản?</p>
                                    <a asp-action="SignUp" asp-controller="Authentication" class="btn btn-outline-secondary btn-lg">Tạo mới ngay</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
